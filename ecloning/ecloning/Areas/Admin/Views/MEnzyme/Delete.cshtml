@model ecloning.Models.modifying_enzyme

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_BioToolsLayout.cshtml";
}

@Html.Partial("_BioTools")
<div id="page-wrapper">
    <div class="row">
        <div class="col-sm-10">
            <h3 class="text-primary"><span class="fa fa-trash-o"></span> Delete Modifying Enzyme</h3>
        </div>
        <div class="col-sm-2">
            <br class="hidden-xs" />
            <a class="btn btn-default pull-right" href="@Url.Action("Index", "MEnzyme")">
                <i class="fa fa-chevron-circle-left text-info"></i>
                <span class="">Cancel</span>
            </a>
        </div>
    </div>

    <div class="row">
        <hr />
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-lg-offset-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Are you sure you want to delete these restriction enzymes?
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="table-responsive">
                            <table class="table table-condensed table-hover">
                                <thead>
                                    <tr>
                                        <th class="col-sm-2">
                                            Category
                                        </th>
                                        <th class="col-sm-2">
                                            Enzymes
                                        </th>
                                        <th class="col-sm-8">
                                            Application
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <span class="text-primary">@Html.DisplayFor(modelItem => Model.category)</span>
                                        </td>
                                        <td>
                                            <span class="text-warning"><strong>@Html.DisplayFor(modelItem => Model.name)</strong></span>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => Model.application)
                                        </td>
                                    </tr>
                                </tbody>                                  
                            </table>
                        </div>
                        <div class="pull-right">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-actions no-color">
                                    <input type="submit" value="Delete Enzyme" class="btn btn-danger" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.category)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.category)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.application)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.application)
        </dd>

    </dl>


</div>
