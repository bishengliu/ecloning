@model ecloning.Models.company

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_BioToolsLayout.cshtml";
}

@Html.Partial("_BioTools")
<div id="page-wrapper">
    <div class="row">
        <div class="col-sm-10">
            <h3 class="text-primary"><span class="fa fa-trash-o"></span> Delete Company</h3>
        </div>
        <div class="col-sm-2">
            <br class="hidden-xs" />
            <a class="btn btn-default pull-right" href="@Url.Action("Index", "Company")">
                <i class="fa fa-chevron-circle-left text-info"></i>
                <span class="">Cancel</span>
            </a>
        </div>
    </div>
    <div class="row">
        <hr />
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-lg-offset-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Are you sure you want to delete this company?
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="table-responsive">
                            <table class="table table-condensed table-hover">
                                <thead>
                                    <tr>
                                        <th class="col-sm-2">
                                            Name Abbrevivation
                                        </th>
                                        <th class="col-sm-2">
                                            Full Name
                                        </th>
                                        <th class="col-sm-8">
                                            Description
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <span class="text-primary">@Html.DisplayFor(modelItem => Model.shortName)</span>
                                        </td>
                                        <td>
                                            <span class="text-warning"><strong>@Html.DisplayFor(modelItem => Model.fullName)</strong></span>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => Model.des)
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="pull-right">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-actions no-color">
                                    <input type="submit" value="Delete Company" class="btn btn-danger" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>