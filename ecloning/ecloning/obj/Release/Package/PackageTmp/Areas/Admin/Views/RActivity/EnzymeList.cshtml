@Scripts.Render("~/bundles/jquery")
<script>
    $(function () {
        var _alphabets = $('#alphabet > button');
        var _contentRows = $('#enzyme-table tbody tr');

        _alphabets.click(function () {
            var _letter = $(this),
                _text = $(this).text().toLowerCase(),
                _count = 0;

            _alphabets.removeClass("active");
            _letter.addClass("active");

            _contentRows.hide();
            _contentRows.each(function (i) {
                var _cellText = $(this).children('td').eq(0).text().toLowerCase().replace(/\s+/g, '');
                if (_text === 'all') {
                    _count += 1;
                    $(this).fadeIn(400);
                } else {
                    if (RegExp('^' + _text).test(_cellText)) {
                        _count += 1;
                        $(this).fadeIn(400);
                    }
                }
            });
        });
    });
</script>

<script>
    bufferIdstring = document.getElementById("bufferId").textContent;
    enzymeIdString = document.getElementById("enzymeId").textContent;
    try {

        //Id list
        bufferIdArray = bufferIdstring.split(',').map(Number);
        enzymeIdArray = enzymeIdString.split(',').map(Number);

        $(document).ready(function () {

            for (var e = 0; e < enzymeIdArray.length; e++) {
                var id = enzymeIdArray[e] + "-";
                $('#' + id).editable();
                for (var b = 0; b < bufferIdArray.length; b++) {
                    id = id + bufferIdArray[b];
                    $('#' + id).editable({
                        source: [
                              { value: 0, text: '<10%' },
                              { value: 1, text: '10%' },
                              { value: 2, text: '10-25%' },
                              { value: 3, text: '25%' },
                              { value: 4, text: '25-50%' },
                              { value: 5, text: '50%' },
                              { value: 6, text: '50-75%' },
                              { value: 7, text: '75%' },
                              { value: 8, text: '75-100%' },
                              { value: 9, text: '100%' }
                        ]
                    });
                    id = enzymeIdArray[e] + "-";
                }
            }
        });
    }
    catch (e)
    {
        consol.log(e);
    }
</script>