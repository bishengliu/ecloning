@model IEnumerable<ecloning.Models.ladder>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_BioToolsLayout.cshtml";
}

@Html.Partial("_BioTools")
<div id="page-wrapper">
    <div class="row">
        <div class="col-sm-10">
            <h3 class="text-primary"><i class="fa fa-barcode fa-rotate-270 fa-fw"></i> Ladders</h3>
        </div>
        <div class="col-sm-2">
            <br class="hidden-xs" />
            <a class="btn btn-default pull-right" href="@Url.Action("Create", "Ladder")">
                <i class="fa fa-plus-circle text-info"></i>
                <span class="">Ladder</span>
            </a>
        </div>
    </div>

    <div class="row">
        <hr/>
        <div class="col-md-12 col-lg-10 col-lg-offset-1">
            @if (Model.Count() == 0)
            {
                <div class="text-danger">No ladder found! Please first add a ladder to continue.</div>
            }
            else
            {
                <div class="panel panel-primary">
                    <div class="panel-heading"></div>
                    <div class="panel-body">
                        @if (Model.Where(t => t.ladder_type == "DNA").Count() > 0)
                        {
                        <div class="list-group">
                            <a class="list-group-item" href="@Url.Action("Details", "Ladder", new { type="DNA"})">
                                <h4 class="list-group-item-heading">
                                    <i class="fa fa-barcode fa-rotate-270 fa-fw text-info"></i>
                                    <span class="text-primary"><strong>DNA Ladders</strong></span>
                                    <span class="badge pull-right"><span>#ladders:</span> @Model.Where(t => t.ladder_type == "DNA").Count()</span>
                                </h4>
                            </a>
                        </div>
                        }
                        else
                        {
                        <div class="list-group">
                            <a class="list-group-item disabled" href="@Url.Action("Details", "Ladder", new { type="DNA"})">
                                <h4 class="list-group-item-heading">
                                    <i class="fa fa-barcode fa-rotate-270 fa-fw text-info"></i>
                                    <span class="text-primary"><strong>DNA Ladders</strong></span>
                                    <span class="badge pull-right"><span>#ladders:</span> @Model.Where(t => t.ladder_type == "DNA").Count()</span>
                                </h4>
                            </a>
                        </div>
                        }
                        @if (Model.Where(t => t.ladder_type == "RNA").Count() > 0)
                        {
                        <div class="list-group">
                            <a class="list-group-item" href="@Url.Action("Details", "Ladder", new { type="RNA"})">
                                <h4 class="list-group-item-heading">
                                    <i class="fa fa-barcode fa-rotate-270 fa-fw text-info"></i>
                                    <span class="text-primary"><strong>RNA Ladders</strong></span>
                                    <span class="badge pull-right"><span>#ladders:</span> @Model.Where(t => t.ladder_type == "RNA").Count()</span>
                                </h4>
                            </a>
                        </div>
                        }
                        else
                        {
                        <div class="list-group">
                            <a class="list-group-item disabled" href="@Url.Action("Details", "Ladder", new { type="RNA"})">
                                <h4 class="list-group-item-heading">
                                    <i class="fa fa-barcode fa-rotate-270 fa-fw text-info"></i>
                                    <span class="text-primary"><strong>RNA Ladders</strong></span>
                                    <span class="badge pull-right"><span>#ladders:</span> @Model.Where(t => t.ladder_type == "RNA").Count()</span>
                                </h4>
                            </a>
                        </div>
                        }
                        @if (Model.Where(t => t.ladder_type == "Protein").Count() > 0)
                        {
                        <div class="list-group">
                            <a class="list-group-item" href="@Url.Action("Details", "Ladder", new { type="Protein"})">
                                <h4 class="list-group-item-heading">
                                    <i class="fa fa-barcode fa-rotate-270 fa-fw text-info"></i>
                                    <span class="text-primary"><strong>Protein Ladders</strong></span>
                                    <span class="badge pull-right"><span>#ladders:</span> @Model.Where(t => t.ladder_type == "Protein").Count()</span>
                                </h4>
                            </a>
                        </div>
                        }
                        else
                        {
                        <div class="list-group">
                            <a class="list-group-item disabled" href="@Url.Action("Details", "Ladder", new { type="Protein"})">
                                <h4 class="list-group-item-heading">
                                    <i class="fa fa-barcode fa-rotate-270 fa-fw text-info"></i>
                                    <span class="text-primary"><strong>Protein Ladders</strong></span>
                                    <span class="badge pull-right"><span>#ladders:</span> @Model.Where(t => t.ladder_type == "Protein").Count()</span>
                                </h4>
                            </a>
                        </div>
                        }
                    </div>
                </div>
                
            }
        </div>
    </div>

</div>