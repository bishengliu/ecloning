<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - eCloning</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container-fluid top-logo">
        <div class="container" style="padding-top:20px;">
            <div class="row">
                <div class="col-xs-7">
                    <span class="text-danger">eCloning</span><br/>
                    <span>Molecular Cloning is never so easy</span>
                </div>
                <div class="col-xs-5">
                    <div class="row">
                        <div class="col-sm-6">
                            <img class="img-responsive" src="~/logo/lumc.png" height="40" style="height:40px !important"/>
                        </div>
                        <div class="col-sm-6">
                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="hidden-sm hidden-xs">&nbsp;</div>
    </div>
    <div class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                       <li>@Html.ActionLink("Plasmids", "Index", "Plasmid")</li>
                    }

                </ul>
            </div>
        </div>
    </div>

    <div class="container-fluid body-content">
        @RenderBody()
        <div class="footer navbar-fixed-bottom">
            <footer>
                <p class="text-center" style="margin: 0px 0px 0px 0px;">&copy; @DateTime.Now.Year - eCloning. All Rights Reserved</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
