@model ecloning.Models.plasmid

@{
    ViewBag.Title = "Delete Plasmid";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string id = null;
    string refId = "#";
    id = Model.name;
    refId = refId + id;
}
<div class="row">
    <br/>
    <div class="col-sm-6 col-sm-offset-4 col-xs-12">
        <div class="text-danger head3-size">Are you sure you want to delete this?</div>
    </div>
    <div class="col-sm-2 col-xs-12">
            <div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-link" /> |
                        @Html.ActionLink("Back", "Index", null, new { @class="btn btn-link"})
                    </div>
                }
            </div>


    </div>
</div>

<div class="table-responsive">
    <table class="table table-condensed">
            <tr>
                <td class="col-sm-6">
                    <span class="text-danger">@Html.DisplayFor(model => model.name)</span>&nbsp;&nbsp;
                    
                    <br />
                    <span class="text-info"><strong>Expression: </strong></span><span>@Html.DisplayFor(model => model.expression_system)</span>&nbsp;&nbsp;<span>@Html.DisplayFor(model => model.expression_subsystem)</span><br />
                    <span class="text-info"><strong>Insert/Gene: </strong></span>
                    @if (Model.insert != null)
                    {
                        <span>@Html.DisplayFor(model => model.insert_species)</span>
                        <span>&nbsp; &nbsp;</span><span>@Html.DisplayFor(model => model.insert)</span>
                        if (Model.promotor != null)
                        {
                            <span>&nbsp; &nbsp;</span><span class="text-info"><strong>Promotor: </strong></span><span>@Html.DisplayFor(model => model.promotor)</span>
                        }
                        if (Model.polyA != null)
                        {
                            <span>&nbsp; &nbsp;</span><span class="text-info"><strong>PolyA: </strong></span><span>@Html.DisplayFor(model => model.polyA)</span><br />
                        }
                        else
                        {
                            <br />
                        }
                    }
                    else
                    {
                        <span>None</span><br />
                    }
                    <span class="text-info"><strong>Resistance: </strong></span><span>@Html.DisplayFor(model => model.resistance)</span>
                    @if (Model.selection != null)
                    {
                        <span>&nbsp; &nbsp;</span><span class="text-info"><strong>Selection: </strong></span><span>@Html.DisplayFor(model => model.selection)</span>
                    }
                    @if (Model.reporter != null)
                    {
                        <span>&nbsp;&nbsp;</span><span class="text-info"><strong>Reporter: </strong></span><span>@Html.DisplayFor(model => model.reporter)</span><br />
                    }
                    else
                    {
                        <br />
                    }
                    <span class="text-info"><strong>Experimental Use: </strong></span><span>@Html.DisplayFor(model => model.usage)</span>
                    @if (Model.plasmid_type != null)
                    {
                        <span>&nbsp; &nbsp;</span><span class="text-info"><strong>Plasmid Type: </strong></span><span>@Html.DisplayFor(model => model.plasmid_type)</span><br />
                    }
                    else
                    {
                        <br />
                    }

                    @if (Model.img_fn != null)
                    {
                        <span class="text-info"><strong>Linked File: </strong></span>
                        <span>
                            <a href="@Url.Action("Download", "Plasmid", new { fileName=Model.img_fn })">
                                <span style="color:black">@Model.img_fn</span>&nbsp;&nbsp;<i class="glyphicon glyphicon-download text-info"></i>
                            </a>
                        </span><span>&nbsp;&nbsp;</span>
                    }

                    @if (Model.ref_plasmid != null)
                    {
                        <span class="text-info"><strong>Linked Plasmid(s): </strong></span><span>@Html.DisplayFor(model => model.ref_plasmid)</span><span>&nbsp;&nbsp;</span>

                    }
                    @if (Model.addgene != null)
                    {
                        <span class="text-info"><strong>Addgene#: </strong></span><span>@Html.DisplayFor(model => model.addgene)</span><br />
                    }
                    else
                    {
                        <br />
                    }
                    <span class="text-info"><strong>Remarks: </strong></span><span>@Html.DisplayFor(model => model.des)</span>
                </td>
                <td class="col-sm-4">
                    @if (Model.sequence != null)
                    {
                        <span>
                            <!-- Trigger the modal with a button -->
                            <a data-toggle="modal" data-target=@refId>
                                <i class="glyphicon glyphicon-eye-open text-warning"></i>
                                <span>Full Sequence</span>
                            </a>
                            <br />
                            <!-- Modal -->
                            <div id=@id class="modal fade" role="dialog">
                                <div class="modal-dialog">
                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title text-center text-info">Plasmid @Model.name (@Model.seq_length bp)</h4>
                                        </div>
                                        <div class="modal-body">
                                            <div class="row">
                                                <div class="col-sm-1"></div>
                                                <div class="col-sm-10">
                                                    <p class="text-center">-- @Model.name --</p><br />
                                                    @Html.DisplayFor(model => model.sequence)
                                                </div>
                                                <div class="col-sm-1"></div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </span>
                    }

                    <span class="glyphicon glyphicon-resize-horizontal text-info"></span><text> </text><span class="text-info"><strong>Length: </strong></span><span>@Html.DisplayFor(model => model.seq_length)</span>
                    <br />
                </td>
            </tr>
    </table>
</div>