
@{
    ViewBag.Title = "Share Plasmid";
    Layout = "~/Views/Shared/_Layout_Empty.cshtml";
    Dictionary<int, string>  groupIdName = (Dictionary<int, string>)ViewBag.groupIdName;
    int plasmidTableId = (int)ViewBag.Id;

    //prepare selectList
    List<SelectListItem> listItems = new List<SelectListItem>();
    foreach(var i in groupIdName)
    {
        listItems.Add(new SelectListItem
        {
            Text = i.Value,
            Value = i.Key.ToString()
        });
    }
}

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title text-center text-info">Submit Plasmid to Group(s)</h4>
            </div>

            <div class="row">
                <div class="col-sm-1 hidden-xs">&nbsp;</div>
                <div class="col-sm-10 col-xs-12">
                    <br/>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group required">
                                @Html.Label("Group(s)", htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-6">
                                    @Html.DropDownList("group", listItems, "-- Select --", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-6">
                                    <input type="text" name="plasmid_table_id" value=@plasmidTableId class="hidden" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-5 col-sm-2">
                                    <input type="submit" value="Share Plasmid" class="btn btn-block btn-primary" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="col-md-1 hidden-xs">&nbsp;</div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
            </div>

    

