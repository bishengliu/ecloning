                                                id = id + i.ToString();
                                                //find pk
                                                var activity = db.activity_restriction.Where(a => a.company_id == item.company_id && a.enzyme_id == item.enzyme_id && a.buffer_id == i).First();
                                                int pk = activity.id;
                                                <td class="text-center">
                                                    <span class="text-warning">@Html.Raw(convertActivity.Convert(dict[count].First().Value))</span>
                                                </td>
                                                count++;
                                                id = item.enzyme_id.ToString() + "-";
                                            }
                                            <td class="text-center vert-align">
                                                @if (item.starActivity == true)
                                                {
                                                    @Html.Raw(enzymeSybol.StarActivitySymbol((bool)item.starActivity))
                                                }
                                                else
                                                {
                                                    @Html.Raw(symbol)
                                                }
                                            </td>
                                            <td class="text-center vert-align">
                                                @if (item.inactivity != null)
                                                {
                                                    @Html.Raw(enzymeSybol.InactivationSymbol((int)item.inactivity))
                                                }
                                                else
                                                {
                                                    @Html.Raw(enzymeSybol.InactivationSymbol(0))
                                                }
                                            </td>
                                            <td class="text-center vert-align">
                                                @if (item.dam == true)
                                                {
                                                    @Html.Raw(enzymeSybol.DamSymbol((bool)item.dam))
                                                }
                                                else
                                                {
                                                    @Html.Raw(symbol)
                                                }
                                            </td>
                                            <td class="text-center vert-align">
                                                @if (item.dcm == true)
                                                {
                                                    @Html.Raw(enzymeSybol.DcmSymbol((bool)item.dcm))
                                                }
                                                else
                                                {
                                                    @Html.Raw(symbol)
                                                }
                                            </td>
                                            <td class="text-center vert-align">
                                                @if (item.cpg == true)
                                                {
                                                    @Html.Raw(enzymeSybol.CpGSymbol((bool)item.cpg))
                                                }
                                                else
                                                {
                                                    @Html.Raw(symbol)
                                                }
                                            </td>
                                        </tr>
                                    }
                                </table>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-sm-1 hidden-xs"></div>
</div>

@Scripts.Render("~/bundles/jquery")
<script>
    $(function () {
        var _alphabets = $('#alphabet > button');
        var _contentRows = $('#enzyme-table tbody tr');

        _alphabets.click(function () {
            var _letter = $(this),
                _text = $(this).text().toLowerCase(),
                _count = 0;

            _alphabets.removeClass("active");
            _letter.addClass("active");

            _contentRows.hide();
            _contentRows.each(function (i) {
                var _cellText = $(this).children('td').eq(0).text().toLowerCase().replace(/\s+/g, '');
                if (_text === 'all') {
                    _count += 1;
                    $(this).fadeIn(400);
                } else {
                    if (RegExp('^' + _text).test(_cellText)) {
                        _count += 1;
                        $(this).fadeIn(400);
                    }
                }
            });
        });
    });
</script>