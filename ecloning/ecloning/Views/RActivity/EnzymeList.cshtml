                                            </th>
                                            <th class="text-center no-sort">
                                                <span class="glyphicon glyphicon-fire text-primary"></span>
                                            </th>
                                            <th class="text-center no-sort">
                                                <span class="text-primary">Dam</span>
                                            </th>
                                            <th class="text-center no-sort">
                                                <span class="text-primary">Dcm</span>
                                            </th>
                                            <th class="text-center no-sort">
                                                <span class="text-primary">CpG</span>
                                            </th>
                                        </tr>
                                    </thead>
                                    @foreach (var item in Model)
                                    {
                                        string symbol = "<span></span>";
                                        var enzymeSybol = new ecloning.Models.RestrictionEnzyme();
                                        //find enzyme info
                                        var enzyme = db.restri_enzyme.Find(item.enzyme_id);
                                        var dict = item.Activity;
                                        //set id for each activity
                                        //enzyme_id-buffer_id
                                        var id = item.enzyme_id.ToString() + "-";
                                        int count = 0;
                                        //check whether the enzyme is in the favorite list
                                        bool inFavorite = false;
                                        foreach(var g in groupId)
                                        {
                                            var FavEnzyme = db.common_restriction.Where(f => f.enzyme_id == item.enzyme_id && f.company_id == item.company_id && f.group_id == g);
                                            if (FavEnzyme.Count() > 0)
                                            {
