@model ecloning.Models.exp_step_result
@{
    ViewBag.Title = "Delete Result";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int Id = (int)ViewBag.Id;
    int StepTableId = ViewBag.StepTableId;

    //format date
    var Date = "";
    var day = Model.dt.Value.Day;
    var month = Model.dt.Value.Month;
    var year = Model.dt.Value.Year;
    var dc = new ecloning.Models.DateConvert();
    Date = dc.GetDate(day, month, year, "ddMMyyyy", "/");
}

<div class="">
    <br />
    <div class="col-sm-6 col-sm-offset-4 col-xs-12">
        <div class="text-danger head3-size">Are you sure you want to delete this?</div>
    </div>
    <div class="col-sm-2 col-xs-12">
        <div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input class="hidden" name="id" value="@Id"/>
                    <input type="submit" value="Delete" class="btn btn-link" /> |
                    <a href="@Url.Action("StepDetails", "Experiment", new { id = StepTableId })" class="btn btn-default" data-toggle="tooltip" data-placement="bottom" title="Go back to the results">
                        <span>Back</span>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="">
    <div class="col-xs-12 col-sm-offset-1 col-sm-10">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th class="col-xs-1">Date</th>
                    <th class="col-xs-4">File(s)</th>
                    <th class="col-xs-6">Remarks</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Date</td>
                    <td>
                        <a href="@Url.Action("Download", "Experiment", new { fileName = Model.result_upload, actionName = "DeleteResult", id = StepTableId })">
                            <i class="fa fa-download"></i>
                            <span>@Model.result_upload.Substring(Model.result_upload.IndexOf('%') + 1)</span>
                        </a>                        
                    </td>
                    <td>@Html.Raw(Model.result_des)</td>
                </tr>
            </tbody>
        </table>
    </div>    
</div>