@model ecloning.Models.experiment
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var peopleInfo = new ecloning.Models.PeopleInfo((int)Model.people_id);
    var db = new ecloning.Models.ecloningEntities();
    //get the step count
    int stepCount = db.exp_step.Where(e => e.exp_id == Model.id).Count();
    var outDate ="";
    if (Model.dt != null)
    {
        var day = Model.dt.Value.Day;
        var month = Model.dt.Value.Month;
        var year = Model.dt.Value.Year;
        var dc = new ecloning.Models.DateConvert();
        outDate = dc.GetDate(day, month, year, "ddMMyyyy", "/");

    }
}

<div class="">
    <br />
    <div class="col-sm-6 col-sm-offset-4 col-xs-12">
        <div class="text-danger head3-size">Are you sure you want to delete this?</div>
    </div>
    <div class="col-sm-2 col-xs-12">
        <div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-link" /> |
                    <a href="@Url.Action("Index", "Experiment")" class="btn btn-link">
                        <span>Back</span>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
<div class="clearfix"></div>
<br/>
<br/>
<div class="">
    <div class="col-sm-1 hidden-xs"></div>
    <div class="col-sm-10">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>
                        Exp#
                    </th>
                    <th class="no-sort">
                        Name
                    </th>
                    <th class="no-sort">
                        #Step
                    </th>
                    <th class="no-sort">
                        Comment
                    </th>
                    <th class="no-sort">
                        Date
                    </th>
                    <th class="no-sort">
                        People
                    </th>
                    <th class="no-sort"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Model.id
                    </td>
                    <td>
                        <a href="@Url.Action("Details", "Experiment", new { id= Model.id})" data-toggle="tooltip" data-placement="top" title="click to view the experiment details">
                            <i class="fa fa-info-circle text-danger"></i>
                            <span>@Model.name</span>
                        </a>
                    </td>
                    <td>
                        @stepCount
                    </td>
                    <td>
                        @Html.Raw(Model.des)
                    </td>
                    <td>
                        @outDate
                    </td>
                    <td>
                        @peopleInfo.Name
                    </td>
                </tr>

            </tbody>
        </table>

    </div>
</div>

