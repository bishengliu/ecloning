@model ecloning.Models.probe
@{
    ViewBag.Title = "Delete Probe";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var peopleInfo = new ecloning.Models.PeopleInfo((int)Model.people_id);
    var db = new ecloning.Models.ecloningEntities();
    var fprimer = db.primers.Where(f => f.id == Model.forward_primer).FirstOrDefault();
    var rprimer = db.primers.Where(f => f.id == Model.reverse_primer).FirstOrDefault();
}

<div class="row">
    <br />
    <div class="col-sm-6 col-sm-offset-4 col-xs-12">
        <div class="text-danger head3-size">Are you sure you want to delete this?</div>
    </div>
    <div class="col-sm-2 col-xs-12">
        <div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-link" /> |
                    @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-link" })
                </div>
            }
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-lg-offset-1 col-sm-10">
        <dl class="dl-horizontal">
            <dt>
                Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.name)
            </dd>

            <dt>
                Sequence
            </dt>

            <dd>
                @Html.DisplayFor(model => model.sequence)
            </dd>
            <dt>
                Forward Primer
            </dt>

            <dd>
                @fprimer.name<text>: </text>@fprimer.sequence
            </dd>
            <dt>
                Reverse Primer
            </dt>

            <dd>
                @rprimer.name<text>: </text>@rprimer.sequence
            </dd>
            <dt>
                Usage
            </dt>
            <dd>
                @Html.DisplayFor(model => model.usage)
            </dd>
            <dt>
                Location
            </dt>
            <dd>
                @Html.DisplayFor(model => model.location)
            </dd>
            <dt>
                People
            </dt>

            <dd>
                @peopleInfo.Name
            </dd>

        </dl>
    </div>
</div>

