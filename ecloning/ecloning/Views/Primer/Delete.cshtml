@model ecloning.Models.primer

@{
    ViewBag.Title = "Delete Primer";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //get people info
    var peopleInfo = new ecloning.Models.PeopleInfo((int)Model.people_id);
}



<div class="row">
    <br />
    <div class="col-sm-6 col-sm-offset-4 col-xs-12">
        <div class="text-danger head3-size">Are you sure you want to delete this?</div>
    </div>
    <div class="col-sm-2 col-xs-12">
        <div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-link" /> |
                    @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-link" })
                </div>
            }
        </div>
    </div>
</div>


<div class="row">
    <div class="col-xs-12 col-lg-offset-1 col-sm-10">
        <dl class="dl-horizontal">
            <dt>
                Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.name)
            </dd>

            <dt>
                Hybridization Sequence
            </dt>

            <dd>
                @Html.DisplayFor(model => model.sequence)
            </dd>


            <dt>
                Non-hybridization Sequence
            </dt>

            <dd>
                @Html.DisplayFor(model => model.modification)
            </dd>
            <dt>
                Location
            </dt>

            <dd>
                @Html.DisplayFor(model => model.location)
            </dd>
            <dt>
                Company
            </dt>

            <dd>
                @Html.DisplayFor(model => model.company)
            </dd>

            <dt>
                Order#
            </dt>

            <dd>
                @Html.DisplayFor(model => model.orderref)
            </dd>

            <dt>
                Comment
            </dt>

            <dd>
                @Html.DisplayFor(model => model.des)
            </dd>

            <dt>
                Date
            </dt>

            <dd>
                @if (Model.dt != null)
                {
                    var day = Model.dt.Value.Day;
                    var month = Model.dt.Value.Month;
                    var year = Model.dt.Value.Year;
                    var dc = new ecloning.Models.DateConvert();
                    var outDate = dc.GetDate(day, month, year, "ddMMyyyy", "/");
                    @outDate
                }
            </dd>

            <dt>
                People
            </dt>

            <dd>
                @peopleInfo.Name
            </dd>

        </dl>
    </div>
</div>
